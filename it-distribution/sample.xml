	<id>it-distribution</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>../environment/config</directory>
			<includes>
				<include>**/*.cfg</include>
			</includes>
			<lineEnding>crlf</lineEnding>
			<excludes>
				<exclude>*.formatted</exclude>
			</excludes>
			<outputDirectory>/etc</outputDirectory>
